---
import { Image } from "astro:assets";
import Hero1Image from "../assets/images/hero/1.png";
import Hero2Image from "../assets/images/hero/2.png";
import Hero3Image from "../assets/images/hero/3.png";
import Hero4Image from "../assets/images/hero/4.png";
import Hero5Image from "../assets/images/hero/5.png";
import Hero6Image from "../assets/images/hero/6.png";
import Hero7Image from "../assets/images/hero/7.png";
import Hero8Image from "../assets/images/hero/8.png";
import Hero9Image from "../assets/images/hero/9.png";
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar.astro";
import RootLayout from "../layouts/root-layout.astro";

const slides = [
	Hero1Image,
	Hero2Image,
	Hero3Image,
	Hero4Image,
	Hero5Image,
	Hero6Image,
	Hero7Image,
	Hero8Image,
	Hero9Image,
];
---

<RootLayout>
  <Navbar/>
  <section class="p-6 lg:p-25 pt-[6.75rem] lg:pt-[13rem] grid grid-cols-1 lg:grid-cols-2 lg:gap-20 min-h-dvh">
    <div class="space-y-10">
      <h2 class="font-bold text-3xl lg:text-4xl">
        Kami siap membantu Anda merencanakan liburan terbaik di Puncak
      </h2>
      <p class="text-base lg:text-lg text-[#434343]">
        Hubungi kami untuk detail villa, fasilitas, dan reservasi. Semua informasi resmi tersedia agar perjalanan Anda semakin mudah dan nyaman
      </p>
    </div>
    <div class="relative w-full h-[20rem] lg:h-[40rem] rounded-3xl bg-gray-200 overflow-hidden">
      {slides.map((src, i) => (
        <Image
          src={src}
          alt={`Image ${i + 1}`}
          loading={i === 0 ? "eager" : "lazy"}
          class={`slide absolute w-full h-full object-cover ${i === 0 ? "active" : ""}`}
          data-idx={i}
        />
      ))}
      <div class="absolute inset-0 bg-black/60 pointer-events-none"></div>
    </div>
  </section>
  <Footer/>
</RootLayout>
<style>
  .slide { opacity: 0; transition: opacity 700ms ease; }
  .slide.active { opacity: 1; }
</style>

<script>
  const slides = Array.from(document.querySelectorAll<HTMLImageElement>('.slide'));

  let idx = 0;
  const N = slides.length;
  const AUTOPLAY_MS = 5000; // change timing as needed
  let timer: number | null = null;

  function show(i: number) {
    slides[idx].classList.remove('active');

    idx = (i + N) % N;

    slides[idx].classList.add('active');
  }

  function next() { show(idx + 1); }
  function prev() { show(idx - 1); }

  function start() {
    stop();
    timer = window.setInterval(next, AUTOPLAY_MS);
  }
  function stop() {
    if (timer !== null) {
      clearInterval(timer);
      timer = null;
    }
  }

  // Kick off
  start();
</script>
