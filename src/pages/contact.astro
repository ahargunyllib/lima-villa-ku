<style>
  .slide {
    opacity: 0;
    transition: opacity 700ms ease;
  }
  .slide.active {
    opacity: 1;
  }
</style>

<script>
  const slides = Array.from(
    document.querySelectorAll<HTMLImageElement>(".slide")
  );

  let idx = 0;
  const N = slides.length;
  const AUTOPLAY_MS = 5000; // change timing as needed
  let timer: number | null = null;

  function show(i: number) {
    slides[idx].classList.remove("active");

    idx = (i + N) % N;

    slides[idx].classList.add("active");
  }

  function next() {
    show(idx + 1);
  }
  function prev() {
    show(idx - 1);
  }

  function start() {
    stop();
    timer = window.setInterval(next, AUTOPLAY_MS);
  }
  function stop() {
    if (timer !== null) {
      clearInterval(timer);
      timer = null;
    }
  }

  // Kick off
  start();
</script>
