---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import RootLayout from "../layouts/root-layout.astro";
---

<RootLayout>
  <Navbar/>
  <main class="pt-24 min-h-[200vh]">
    <div class="max-w-4xl mx-auto px-8">
      <h1 class="text-5xl font-bold text-center mb-8 text-gray-900">
        Modern Floating Navbar
      </h1>
      <p class="text-lg leading-relaxed text-gray-600 text-center">
        Scroll down to see the floating navbar in action. The navbar stays fixed at the top.
      </p>

      <div class="h-screen flex items-center justify-center">
        <h2 class="text-3xl text-gray-700">Keep scrolling...</h2>
      </div>

      <div class="h-screen flex items-center justify-center">
        <h2 class="text-3xl text-gray-700">The navbar floats above content</h2>
      </div>
    </div>
  </main>
  <Footer/>
</RootLayout>
