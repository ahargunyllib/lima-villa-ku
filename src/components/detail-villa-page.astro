---
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar.astro";
import RootLayout from "../layouts/root-layout.astro";
import { VillaMap } from "../shared/data/villas";
import type { Villa } from "../shared/types";

const props = Astro.props as { villaSlug: Villa["slug"] };
const villa = VillaMap[props.villaSlug];
---

<RootLayout>
  <Navbar />
  <section id="hero" class="p-6 lg:p-25 pt-[6.75rem] flex flex-col items-center justify-start gap-y-20">
    <h3 class="text-2xl lg:text-4xl font-bold text-black w-full lg:w-1/2 text-center">
      Pilih Villa yang Sesuai dengan Gaya Liburan Anda
    </h3>

    <div class="w-full space-y-6">
      <select class="w-full lg:hidden px-6 py-3 bg-[#111222] rounded-lg text-white font-bold">
        <option value="garuda" selected>Garuda</option>
        <option value="kaluska">Kaluska</option>
        <option value="aliska">Aliska</option>
        <option value="lagogo">Lagogo</option>
        <option value="sari">Sari</option>
      </select>

      <div class="w-full h-[20rem] lg:h-[40rem] rounded-3xl bg-gray-200" />
    </div>
  </section>
  <section id="detail" class="p-6 lg:p-25 pb-20 space-y-20 block lg:flex lg:flex-row lg:items-start lg:justify-center lg:gap-x-20">
    <div class="space-y-8">
      <div class="space-y-4">
        <div class="space-y-1">
          <h1 class="font-bold text-2xl lg:text-5xl text-black">
            {villa.name}
          </h1>
          <div class="flex flex-row items-center gap-4">
            <div class="flex flex-row items-center gap-4">
              <div class="size-5 lg:size-6 rounded-sm bg-[#434343]" />
              <span class="text-sm lg:text-xl text-[#434343]">
                {villa.buildingCount} Bangunan
              </span>
            </div>
            <div class="flex flex-row items-center gap-4">
              <div class="size-5 lg:size-6 rounded-sm bg-[#434343]" />
              <span class="text-sm lg:text-xl text-[#434343]">
                {villa.roomCount} Kamar ({villa.personCapacity} Orang)
              </span>
            </div>
          </div>
        </div>

        <p class="text-sm lg:text-lg text-[#434343]">
          {villa.description}
        </p>
      </div>

      <div class="space-y-4">
        <h2 class="font-bold text-base lg:text-3xl text-black">
          Fasilitas
        </h2>
        <div class="grid grid-cols-2 gap-4">
          {villa.facilities.map((facility) => (
            <div class="flex flex-row items-center gap-4">
              <div class="size-5 lg:size-6 rounded-sm bg-[#434343]" />
              <span class="text-sm lg:text-xl text-[#434343]">
                {facility}
              </span>
            </div>
          ))}
        </div>
      </div>

      <div class="grid grid-cols-2 gap-10">
        <div class="w-full h-full rounded-xl bg-gray-200" />
        <div class="space-y-6">
          <h2 class="font-bold text-base lg:text-3xl text-black">
            Detail Kamar
          </h2>
          <div class="space-y-4">
            {villa.bedroomDetail.facilities.map((facility) => (
              <div class="flex flex-row items-start gap-4">
                <div class="size-5 lg:size-6 rounded-sm bg-[#434343] shrink-0" />
                <span class="text-sm lg:text-xl text-[#434343]">
                  {facility}
                </span>
              </div>
            ))}
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <h2 class="font-bold text-base lg:text-3xl text-black">
          Galeri Fasilitas
        </h2>
        <div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
          {villa.buildingImageUrls.map((url) => (
            <div class="w-full h-24 lg:h-48 rounded-lg bg-gray-200" style={{ backgroundImage: `url(${url})`, backgroundSize: 'cover' }} />
          ))}
        </div>
      </div>

      <div class="space-y-4">
        <h2 class="font-bold text-base lg:text-3xl text-black">
          Ketentuan Umum
        </h2>
        <p class="text-sm lg:text-lg text-[#434343] whitespace-pre-line">
          {villa.termsAndCondition}
        </p>
      </div>
    </div>

    <div class="space-y-8 sticky top-36">
      <div class="px-6 py-10 space-y-6 rounded-lg bg-[#F2F2F2]">
        <div class="space-y-2">
          <h2 class="font-bold text-base lg:text-3xl text-black">
            Harga Sewa (Sewaktu-waktu bisa berubah)
          </h2>

          <p class="text-sm lg:text-xl text-[#434343]">
            Weekend: <strong>{villa.price.weekend.toLocaleString('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0, maximumFractionDigits: 0 })}</strong>
          </p>
          <p class="text-sm lg:text-xl text-[#434343]">
            Weekdays: <strong>{villa.price.weekday.toLocaleString('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0, maximumFractionDigits: 0 })}</strong>
          </p>

          <p class="text-xs lg:text-sm text-[#434343] whitespace-pre-line">
            {villa.price.note}
          </p>
        </div>

        {villa.price.downPayment && (
          <div class="space-y-2">
            <h2 class="font-bold text-base lg:text-3xl text-black">
              DP/Down Payment
            </h2>
            <p class="text-sm lg:text-xl text-[#434343]">
              {villa.price.downPayment.note}
            </p>
          </div>
        )}
      </div>
      <div class="px-6 py-10 space-y-6 rounded-lg bg-[#F2F2F2]">
        <div class="space-y-2">
          <h2 class="font-bold text-base lg:text-3xl text-black">
            Informasi Kontak
          </h2>

          <!-- {villa.contact.instagrams.map((instagram, index) => (
            <p class="text-sm lg:text-xl text-[#434343]">
              <span class={index === 0 ? 'opacity-100' : 'opacity-0'}>Instagram: </span>{instagram}
            </p>
          ))}

          {villa.contact.villaManagers.map((manager, index) => (
            <p class="text-sm lg:text-xl text-[#434343]">
              <span class={index === 0 ? 'opacity-100' : 'opacity-0'}>Pengelola Villa: </span>{manager.phoneNumber} ({manager.name})
            </p>
          ))}

          {villa.contact.villaGuardians.map((guardian, index) => (
            <p class="text-sm lg:text-xl text-[#434343]">
              <span class={index === 0 ? 'opacity-100' : 'opacity-0'}>Penjaga Villa: </span>{guardian.phoneNumber} ({guardian.name})
            </p>
          ))} -->
          <table>
            <tbody>
              {villa.contact.instagrams.map((instagram, index) => (
                <tr>
                  <td class={index === 0 ? 'text-sm lg:text-xl text-[#434343] opacity-100 pr-2 align-top' : 'opacity-0 pr-2 align-top'}>Instagram:</td>
                  <td class="text-sm lg:text-xl text-[#434343]">{instagram}</td>
                </tr>
              ))}
              {villa.contact.villaManagers.map((manager, index) => (
                <tr>
                  <td class={index === 0 ? 'text-sm lg:text-xl text-[#434343] opacity-100 pr-2 align-top' : 'opacity-0 pr-2 align-top'}>Pengelola Villa:</td>
                  <td class="text-sm lg:text-xl text-[#434343]">{manager.phoneNumber} ({manager.name})</td>
                </tr>
              ))}
              {villa.contact.villaGuardians.map((guardian, index) => (
                <tr>
                  <td class={index === 0 ? 'text-sm lg:text-xl text-[#434343] opacity-100 pr-2 align-top' : 'opacity-0 pr-2 align-top'}>Penjaga Villa:</td>
                  <td class="text-sm lg:text-xl text-[#434343]">{guardian.phoneNumber} ({guardian.name})</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
  <Footer />
</RootLayout>
<style>
  select {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-image: url('/icons/chevron-down.svg');
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 1rem;
  }
</style>
