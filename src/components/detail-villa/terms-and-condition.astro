---
import type { Villa } from "../../shared/types";

export type Props = {
  villa: Villa;
};

const { villa } = Astro.props;
---

<div class="space-y-4">
  <h2 class="font-bold text-base lg:text-xl text-black">Ketentuan Umum</h2>
  <ul
    class="list-decimal list-outside text-sm lg:text-base text-[#434343] pl-6"
  >
    {villa.terms.points.map((point) => <li>{point}</li>)}
  </ul>
  {
    villa.terms.note && (
      <p class="text-sm lg:text-base text-[#434343]">{villa.terms.note}</p>
    )
  }
</div>
